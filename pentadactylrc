map <Space> <Leader>
set guioptions+=mTB
set defsearch=duckduckgo

set scrollsteps=1
set scrolltime=0
set editor='xterm -e "vim -f +<line> +\"sil! call cursor(0, <column>)\" <file>"'

set incfind
set findcase=smart
set hintkeys=asdfg;lkjh
highlight -a Hint text-transform: uppercase

nmap -b j 8j
nmap -b k 8k
nmap -b h 8h
nmap -b l 8l

" Ugly way to undo the remapped movement commands while in visual mode
vmap -b j j
vmap -b k k
vmap -b h h
vmap -b l l

nmap -b ; :

" Leader mappings
map -b <Leader>y ;y

