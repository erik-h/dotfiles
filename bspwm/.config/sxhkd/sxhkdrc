#
# bspwm hotkeys
#

alt + shift + Escape
	bspc quit; pkill -x panel

super + l
	sxlock

# Custom quit script (based off i3-exit)
alt + shift + e
	bspwm-exit; pkill -x panel

alt + shift + q
	bspc window -c

alt + t
	bspc desktop -l next

alt + b
	bspc desktop -B

# alt + {s,f}
# 	bspc window -t {floating,fullscreen}
alt + {s,f}
    state={floating,fullscreen}; \
    bspc query -W -w "focused.$\{state\}" && state=tiled; \
    bspc window -t "$state"

# alt + {grave,Tab}
# 	bspc {window,desktop} -f last

alt + apostrophe
	bspc window -s last

alt + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

alt + y
	bspc window -w last.manual

alt + m
	bspc window -s biggest

alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

alt + {_,shift + }c
	bspc window -f {next,prev}

alt + {comma,period}
	bspc desktop -C {backward,forward}

alt + ctrl + {comma,period}
	bspc desktop -R {-90,90}

alt + bracket{left,right}
	bspc desktop -f {prev,next}

alt + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

alt + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

alt + shift + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

alt + ctrl + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

alt + ctrl + {1-9}
	bspc window -r 0.{1-9}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

alt + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

alt + @button{1-3}
	bspc pointer -u

# Switch focus between tiling and floating windows
alt + Tab
	bspc window focused -f next

#
# wm independent hotkeys
#

alt + Return
	termite

alt + d
	rofi -show run -bg "#222222" -fg "#888888" -hlbg "#285577" -hlfg "#ffffff"
	# lighthouse | sh
	# dmenu_run

alt + c
	~/.scripts/dmenu-calc

XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86MonBrightness{Up,Down}
	xbacklight {+,-} 10%

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd;
