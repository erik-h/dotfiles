[credential]
	helper = cache --timeout=7200
[user]
	name = Erik Haugrud
	email = public+git@erikh.me
	signingkey = 2C5A386B8090ADD77D65494CAD5946D4C7ECFF90
[push]
	default = simple
[core]
	editor = vim
	attributesfile = ~/.gitattributes
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	d = diff
	dt = difftool
	today = log --since=midnight
	sync = !git pull && git push
; [http]
; 	sslverify = false
[diff "gpg"]
	textconv = gpg --no-tty --decrypt
[pull]
	rebase = false

; Override settings (e.g. email) when working on work-related projects
; on a personal machine.
[includeIf "gitdir:~/dev/work/**"]
	path = ~/.work.gitconfig

; Override machine-specific settings.
[include]
	path = ~/.local_gitconfig
